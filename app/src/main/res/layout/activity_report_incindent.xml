<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_signinpage"
    android:orientation="vertical"
    tools:context=".ReportIncident">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#536976">

        <Button
            android:id="@+id/reportIncident_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight=".10"
            android:background="@drawable/transparent"
            android:drawableLeft="@drawable/ic_arrow_back_black_24dp"
            android:paddingStart="10dp"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".90"
            android:paddingTop="10dp"
            android:text="Report Incident"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="24sp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/reportIncident_suspectName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape_field3"
            android:hint="Suspect name"
            android:padding="20dp"
            android:textColor="#000000"
            android:textColorHint="#80000000" />

        <EditText
            android:id="@+id/reportIncident_susaddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape_field3"
            android:hint="Institute Name/Address of suspect"
            android:padding="20dp"
            android:textColor="#000000"
            android:textColorHint="#80000000" />

        <EditText
            android:id="@+id/reportIncident_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_weight=".85"
            android:background="@drawable/shape_field3"
            android:gravity="start|top"
            android:hint="Report your case"

            android:inputType="textMultiLine"
            android:padding="20dp"
            android:textColor="#000000"
            android:textColorHint="#80000000" />

        <Button
            android:id="@+id/reportIncident_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_weight=".05"
           android:background="@drawable/btn_blue_rectangle"
            android:text="Submit"
            android:textColor="@android:color/white" />


    </LinearLayout>


</LinearLayout>