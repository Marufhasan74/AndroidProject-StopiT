<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_signinpage"
    android:orientation="vertical"
    tools:context=".SignupPage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/as_tvBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/ic_arrow_back_black_24dp"

            android:textColor="@color/field_color"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableTop="@drawable/ic_website"
            android:text="@string/Registration"
            android:textColor="@android:color/white"
            android:textSize="22sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#efefef">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_signinpage"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="20dp"
            android:paddingRight="20dp">

            <EditText
                android:id="@+id/Signup_etFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/shape_field"
                android:drawableStart="@drawable/ic_person_black_24dp"
                android:drawablePadding="10dp"
                android:ems="15"
                android:hint="@string/Name"

                android:inputType="text"
                android:padding="10dp"
                android:textColorHint="@color/field_color"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_field2"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_gender_symbols"
                    android:drawablePadding="10dp"
                    android:padding="10dp"
                    android:text="@string/Gender"
                    android:textColor="@color/field_color"
                    android:textSize="15sp" />

                <RadioGroup
                    android:id="@+id/RadioGroupGender"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@android:color/white"
                        android:text="@string/Male"
                        android:textColor="@color/field_color" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@android:color/white"
                        android:text="@string/Female"
                        android:textColor="@color/field_color" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:buttonTint="@android:color/white"
                        android:text="@string/Others"
                        android:textColor="@color/field_color" />
                </RadioGroup>


            </LinearLayout>

            <EditText
                android:id="@+id/Signup_etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="0"
                android:background="@drawable/shape_field"
                android:drawableStart="@drawable/ic_email_868686_24dp"
                android:drawablePadding="10dp"
                android:ems="15"
                android:hint="@string/Email"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColorHint="@color/field_color"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/Signup_etPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="0"
                android:background="@drawable/shape_field"
                android:drawableStart="@drawable/ic_phone_868686_24dp"
                android:drawablePadding="10dp"
                android:ems="15"
                android:hint="@string/Phone"
                android:inputType="phone"
                android:padding="10dp"
                android:textColorHint="@color/field_color"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/Signup_etAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="0"
                android:background="@drawable/shape_field"
                android:drawableStart="@drawable/ic_address_black_24dp"
                android:drawablePadding="10dp"
                android:ems="15"
                android:hint="@string/Address"
                android:inputType="textPostalAddress"
                android:padding="10dp"
                android:textColorHint="@color/field_color"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/Signup_etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="0"
                android:background="@drawable/shape_field"
                android:drawableStart="@drawable/ic_key"
                android:drawablePadding="10dp"
                android:ems="15"
                android:hint="@string/Password"
                android:inputType="text"
                android:padding="10dp"
                android:textColorHint="@color/field_color"
                android:textSize="15sp"
                tools:ignore="TextFields" />

            <EditText
                android:id="@+id/Signup_etConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="0"
                android:background="@drawable/shape_field"
                android:drawableStart="@drawable/ic_key"
                android:drawablePadding="10dp"
                android:ems="15"
                android:hint="@string/ConfirmPassword"
                android:inputType="text"
                android:padding="10dp"
                android:textColorHint="@color/field_color"
                android:textSize="15sp"
                tools:ignore="TextFields" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <CheckBox
                    android:id="@+id/Signup_cbPrivacyPolicy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@android:color/white"
                    android:text="@string/Accept"
                    android:textColor="@android:color/white"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:text="@string/PrivacyPolicy"
                    android:textColor="#0BB46A" />
            </LinearLayout>

            <Button
                android:id="@+id/loginPage_btnLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="100dp"
                android:background="@drawable/btn_blue"
                android:paddingLeft="60dp"
                android:paddingTop="10dp"
                android:paddingRight="60dp"
                android:paddingBottom="10dp"
                android:text="@string/Signup"
                android:textColor="#083b66"
                android:textSize="18sp" />

        </LinearLayout>


    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>